{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",

    /* Modules */
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"]
    },

    /* Emit */
    "sourceMap": true,
    "outDir": "./.build",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist", ".build", "coverage", "src/**/*.test.ts"],
  "include": ["./src"]
}
